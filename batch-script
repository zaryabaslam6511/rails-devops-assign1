pipeline {
    agent any

    environment {
        SONARQUBE_SERVER = 'http://sonarqube:9000'
        SONARQUBE_CREDENTIALS_ID = 'sonar-credentials' 
        DOCKER_IMAGE_NAME = 'rails-devops-app'
    }

    stages {
        stage('Checkout Code') {
            steps {
                git branch: 'main', url: 'https://github.com/zaryabaslam6511/rails-devops-assign1.git'
            }
        }

        stage('SonarQube Analysis') {
            steps {
                script {
                    withSonarQubeEnv('SonarQube') { 
                        sh 'mvn sonar:sonar -Dsonar.projectKey=rails-devops-app -Dsonar.host.url=$SONARQUBE_SERVER'
                    }
                }
            }
        }

        stage('Build Docker Image') {
            steps {
                script {
                    sh 'docker build -t $DOCKER_IMAGE_NAME .'
                }
            }
        }
    }

    post {
        always {
            echo 'Pipeline execution complete!'
        }
    }
}
